doctype html
html(lang="pt-br")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Register Student
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.css')
    script(href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.5.0/semantic.min.js')
    style(type='text/css').
      body  {
        padding: 8px !important;
      }
  body
    div(class='ui two item menu')
      a(class='item' href='/') Home 
      a(class='active item' href='/register') Register Student
    div(class='ui text container segment')
      h3(class='ui dividing header') Students
      div(class='ui one column grid centered')
        div(class='column')
          form(class='ui form')
            div(class='field')
              label Name
              input(type='text' name='name' placeholder='Name')
            div(class='field')
              label First Grade
              input(type='number' name='first-grade' placeholder='First Grade')
            div(class='field')
              label Second Grade 
              input(type='number' name='second-grade' placeholder='Second Grade')
            button(class='fluid ui primary button' type='submit') Submit